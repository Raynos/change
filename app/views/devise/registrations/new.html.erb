		<div class="content">
			<div class="column">
				<div class="loginForm">
					<h1>Create an Account</h1>
					<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  					<%= devise_error_messages! %>
						<p class="formItem"><span>Your Name</span><%= f.text_field :name %></p>
						<p class="formItem"><span>Your Email</span><%= f.email_field :email %></p>
						<p class="formItem"><span>Password</span><%= f.password_field :password %></p>
						<p class="formItem"><span>Confirmation</span><%= f.password_field :password_confirmation %></p>
						<div class="right"><%= f.submit 'Join', :class => 'button' %></div>
					<% end %>
				</div>
			</div>
		</div>
