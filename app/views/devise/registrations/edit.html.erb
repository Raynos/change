		<div class="content">
			<div class="column">
				<div class="loginForm">
					<h1>Edit your Account</h1>
					<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
	  					<%= devise_error_messages! %>
						<p class="formItem"><span>Your Name</span><%= f.text_field :name %></p>
						<p class="formItem"><span>Your Email</span><%= f.email_field :email %></p>
						<p class="formItem"><span>Current Password</span><%= f.password_field :current_password %></p>
						<p class="formItem"><span>New Password</span><%= f.password_field :password, :autocomplete => "off" %></p>
						<i>(leave blank if you don't want to change it)</i>
						<p class="formItem"><span>Confirmation</span><%= f.password_field :password_confirmation %></p>
						<% if current_user.rep_status == true %>
							<p class="formItem"><span>Your Location</span><%= f.text_field :location %></p>
							<p class="formItem"><span>Your Bio</span></p>
							<p class="formWideItem"><%= f.text_area :bio %></p>
						<% else %>
							<div class="right"><%= link_to "Become a champion", upgrade_users_path, :class => 'button' %></div>
						<% end %>
						<div class="right"><%= link_to "Delete", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'button' %><%= f.submit 'Update', :class => 'button' %><%= link_to "Back", :back, :class => 'button' %></div>
					<% end %>
				</div>
			</div>
		</div>
